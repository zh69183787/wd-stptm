<!DOCTYPE struts PUBLIC    
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"    
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="notice" namespace="/notice" extends="cuteframework-default">


		<!-- 显示我的通知列表 -->
		<action name="showList" class="myNoticeAction" method="showList">
			<result name="showList">/jsp/notice/noticeList.jsp</result>
		</action>
		
		<action name="showDetail" class="myNoticeAction" method="showDetail">
			<result name="detail">/jsp/notice/noticeDetail.jsp</result>
		</action>
		
		<action name="newNotice" class="myNoticeAction" method="newNotice">
			<result name="newNotice">/jsp/notice/noticeEdit.jsp</result>
		</action>
		
		<action name="choosePerson" class="myNoticeAction" method="choosePerson">
			<result name="choosePerson">/common/peopleCheckbox.jsp</result>
		</action>
		
		<action name="attachment" class="myNoticeAction" method="attachment">
			<result name="attachment">/common/dealFj.jsp</result>
		</action>
		
		
		
		<action name="sendMsg" class="myNoticeAction" method="sendMsg"></action>
		
		<action name="deleteItem" class="myNoticeAction" method="deleteItem"></action>
			
		

		
		
	</package>

</struts>
	
